bar {
	font pango: FiraCode Nerd Font medium 13
    status_command i3blocks -c ~/.config/i3/i3blocks.conf
    position bottom
    i3bar_command i3bar --transparency
#     colors {
# 		    separator          $pink
# 		  #  background         $darkgrey
# 		    background	#1e1e2eD9
# 		    statusline         $pink
# #                          		border 		        bg		txt	
# 		focused_workspace	#1e1e2eD9		#1e1e2eD9	#b4befe 	
# 		active_workspace	#1e1e2eD9	      	#1e1e2eD9 	#a6adc8		
# 		inactive_workspace	#1e1e2eD9 		#1e1e2eD9	#7f849c		
# 		urgent_workspace	#1e1e2eD9    		#1e1e2eD9  	#a6e3a1  	
# 	}
        colors {
        # bar background color
        background $bg
        # text color used for blocks that do not have a color specified.
        statusline $yellow
        # workspaces section            
        #                    border  backgr. text
        focused_workspace    $aqua $aqua $darkgray
        inactive_workspace   $bg $bg $yellow
        active_workspace     $bg $bg $yellow
        urgent_workspace     $red $red $bg
    }
}

